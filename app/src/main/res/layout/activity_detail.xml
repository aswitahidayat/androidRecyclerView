<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:context=".DetailActivity">
    <ImageView
            android:id="@+id/detail_img_item_photo"
            android:layout_width="150dp"
            android:layout_height="350dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            tools:src="@color/colorAccent"
            android:contentDescription="photo"/>

    <TextView
            android:id="@+id/detail_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/detail_img_item_photo"
            android:layout_toRightOf="@id/detail_img_item_photo"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/heroes_name"/>
    <TextView
            android:id="@+id/detail_item_from"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/detail_item_name"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@id/detail_img_item_photo"
            android:layout_toRightOf="@id/detail_img_item_photo"
            android:ellipsize="end"
            android:maxLines="10"
            tools:text="@string/description"
            />

</RelativeLayout>